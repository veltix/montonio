{
    "name": "veltix/montonio",
    "description": "PHP SDK for the Montonio Payments and Shipping APIs",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "firebase/php-jwt": "^7.0",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.1|^2.0"
    },
    "require-dev": {
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-faker": "^4.0",
        "pestphp/pest-plugin-type-coverage": "^4.0",
        "laravel/pint": "^1.27",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Veltix\\Montonio\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Veltix\\Montonio\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest",
        "test:coverage": "pest --type-coverage",
        "lint": "pint",
        "lint:check": "pint --test",
        "analyse": "phpstan analyse",
        "qa": [
            "@lint:check",
            "@analyse",
            "@test"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
